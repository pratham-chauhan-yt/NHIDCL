    <script type="text/javascript">
        function confirmDelete(id) {
            Swal.fire({
                title: "<?php echo __('Are you sure?'); ?>",
                text: "<?php echo __('You won\'t be able to revert this!'); ?>",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonText: "<?php echo __('Cancel'); ?>",
                confirmButtonText: "<?php echo __('Yes, delete it!'); ?>",
            }).then((result) => {
                if (result.isConfirmed) {
                    // Submit the form if confirmed
                    document.getElementById('delete-form-' + id).submit();
                }
            })
        }

        let isToggled = false;

        function formContainer(isEdit = false, stateId = null) {
            if (!isToggled) {
                $('#stateFormContainer').slideToggle(400); // Slide down/up with duration
                isToggled = true;
            }
            $('#stateForm')[0].reset(); // Reset the form

            if (isEdit) {
                // If editing, set the action for update and fill in the data
                $('#method').val('PUT'); // Set method to PUT for update
                $('#submitButton').text('Update'); // Change button text
                $('#state_id').val(stateId); // Set the state ID
                $('#stateForm').attr('action', "<?php echo e(route('states.update', ':id')); ?>".replace(':id', stateId));

                // Optionally fetch existing data via AJAX if not done earlier
                $.get('/master-settings/states/' + stateId + '/edit', function(data) {
                    $('#name').val(data.name); // Populate form fields
                });
            } else {
                // If creating, set the action for creation
                $('#method').val('POST'); // Set method to POST for create
                $('#submitButton').text('Create'); // Change button text
                $('#stateForm').attr('action', "<?php echo e(route('states.store')); ?>"); // Set action to store
            }
        }
    </script>
